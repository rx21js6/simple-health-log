<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="simple-health-log">
        <!-- Converters -->
        <class>jp.nauplius.app.shl.common.model.converters.LocalDateAttributeConverter</class>

        <!-- Entities / Model -->
        <class>jp.nauplius.app.shl.common.model.DailyHealthDetail</class>
        <class>jp.nauplius.app.shl.common.model.DailyHealthDetailPK</class>
        <class>jp.nauplius.app.shl.common.model.DailyHealthDetailTemplate</class>
        <class>jp.nauplius.app.shl.common.model.DailyHealthRecord</class>
        <class>jp.nauplius.app.shl.common.model.DailyHealthRecordPK</class>
        <class>jp.nauplius.app.shl.common.model.KeyIv</class>
        <class>jp.nauplius.app.shl.common.model.LoginUser</class>
        <class>jp.nauplius.app.shl.common.model.UserRole</class>
        <properties>
            <property name="javax.persistence.jdbc.driver"
                value="org.apache.derby.jdbc.EmbeddedDriver" />
            <property name="javax.persistence.jdbc.url"
                value="jdbc:derby:/home/www/healthlog_db;create=true" />
            <property name="javax.persistence.jdbc.user" value="" />
            <property name="javax.persistence.jdbc.password" value="" />
        </properties>
    </persistence-unit>
</persistence>